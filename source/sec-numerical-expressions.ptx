        <exercise xml:id="exercise-write-and-evaluate-expressions">
            <title>Write and Evaluate Expressions Exercise</title>
            <statement>
            
                <p>
                    Write an expression for "the sum of five and twice a number x" and evaluate it for <m>x = 3</m>.
                </p>
            </statement>
        
            <answer>
                <p>
                   <md>
                    <mrow> \amp </mrow>
                    <mrow> \amp </mrow>
                    <mrow> \amp </mrow>
                    <mrow> \amp </mrow>
                    <mrow> \amp </mrow>
                   </md><!-- The expression is <m>5 + 2x</m>. For <m>x = 3</m>, it evaluates to <m>5 + 2 \cdot 3 = 11</m>. -->
                </p>
            </answer>
        </exercise>
        

